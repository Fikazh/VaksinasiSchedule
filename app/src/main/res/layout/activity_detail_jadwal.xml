<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#C4DFE6"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/constraint_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_rounded_bg_white"
                android:padding="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/kode_jadwal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kode Jadwal"
                    android:textSize="36dp"
                    android:textColor="#000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/line"
                    android:layout_width="340dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/kode_jadwal"/>

                <ImageView
                    android:id="@+id/foto_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/upload_image"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/nama_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi Vaksin"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/foto_lokasi"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/nama_lokasi_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lokasi"
                    android:padding="10dp"
                    android:background="@drawable/layout_rounded_bg_gray"
                    app:layout_constraintTop_toBottomOf="@id/nama_lokasi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/nama_lokasi_field"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/alamat_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Lokasi"
                    android:padding="10dp"
                    android:background="@drawable/layout_rounded_bg_gray"
                    app:layout_constraintTop_toBottomOf="@id/alamat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tanggal_vaksin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Vaksin"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/alamat_field"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tanggal_vaksin_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Vaksin"
                    android:padding="10dp"
                    android:background="@drawable/layout_rounded_bg_gray"
                    app:layout_constraintTop_toBottomOf="@id/tanggal_vaksin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/gelombang_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rentang Jam Gelombang 1"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/tanggal_vaksin_field"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/gelombang_1_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rentang jam gelombang satu"
                    android:padding="10dp"
                    android:background="@drawable/layout_rounded_bg_gray"
                    app:layout_constraintTop_toBottomOf="@id/gelombang_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/gelombang_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rentang Jam Gelombang 2"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/gelombang_1_field"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/gelombang_2_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rentang Jam Gelombang 2"
                    android:padding="10dp"
                    android:background="@drawable/layout_rounded_bg_gray"
                    app:layout_constraintTop_toBottomOf="@id/gelombang_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_banner"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/box_biru"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Jadwal Vaksin"
            android:textColor="#ffffff"
            android:textSize="36sp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#375397"
        app:itemIconTint="#c4dfe6"
        app:itemTextColor="#c4dfe6"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>